<div class="mt-2 ml-5">
  <h1 class="title is-3 has-text-centered"><%= @anime.title %></h1>

  <div class="mt-5 mx-5">
    <div class="columns is-vcentered">
      <div class="column is-one-third ">
        <div class="card">
          <div class="card-image">
            <figure class="image is-2by1">
              <img src="<%= @anime.url_image %>" alt="<%= @anime.title %>">
            </figure>
          </div>
            <p class="ml-2 is-size-6"><strong>Genre:</strong> <%= @anime.genres_list%></p>
        </div>
      </div>

      <div class="column mb-auto">
        <div class="content">
            <h2 class="has-text-weight-bold is-size-5">Synopsis</h2>
            <p><%= @anime.synopsis %></p>
            <h2 class="has-text-weight-bold is-size-5">Studio</h2>
            <p><%= link_to @anime.studio.studio_name, @anime.studio %></p>
            <h2 class="has-text-weight-bold is-size-5">Year</h2>
            <p><%= @anime.year %></p>
            <h2 class="has-text-weight-bold is-size-5">Rating</h2>
            <p><%= @anime.score %></p>
        </div>
      </div>
    </div>
  </div>
</div>

