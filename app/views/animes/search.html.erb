<div class="mt-2 ml-5">
  <h1 class="title is-3">Search Results</h1>

  <% if @animes.any? %>
    <ul>
      <% @animes.each do |anime| %>
        <li class="subtitle is-5"><%= link_to anime.title, anime %></li>
      <% end %>
    </ul>
  <% else %>
    <p class="mt-3 subtitle is-5">No anime found named: "<%= params[:query] %>"</p>
  <% end %>
</div>