<div class="mt-2 ml-5">
  <h1 class="title is-3">Search Results</h1>

  <% if @animes.any? %>
    <div class="mt-5 mx-5">
    <div class="columns is-multiline">
      <% @animes.each do |anime| %>
        <div class="column is-one-fifth">
           <%= link_to anime_path(anime) do %>
            <div class="card">
              <div class="card-image">
                <figure class="image is-2by1">
                  <img
                    src="<%= anime.url_image %>"
                    alt="<%= anime.title %>"
                  />
                </figure>
              </div>
                <p class="is-family-monospace	has-text-weight-semibold has-text-centered"><%= anime.title %></p>
              </div>
              <% end %>
          </div>
      <% end %>
    </div>
  </div>
  <% else %>
    <p class="mt-3 subtitle is-5">No anime found named: "<%= params[:query] %>"</p>
  <% end %>
</div>